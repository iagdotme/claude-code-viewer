    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "effect": "3.19.8",
    "es-toolkit": "1.42.0",
    "hono": "4.10.7",
    "jotai": "2.15.1",
    "lucide-react": "0.555.0",
    "parse-git-diff": "0.0.19",
    "prexit": "2.3.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-error-boundary": "6.0.0",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "10.1.0",
    "react-syntax-highlighter": "16.1.0",
    "remark-gfm": "4.0.1",
    "sonner": "2.0.7",
    "tailwind-merge": "3.4.0",
    "ulid": "3.0.2",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
